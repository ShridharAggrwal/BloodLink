# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Render will provide this)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_HOST=hostname
DB_PORT=port
DB_NAME=database_name
DB_USER=username
DB_PASSWORD=password

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration - SendGrid (Required for production)
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=your-verified-sender@domain.com

# Frontend URL (Update this with your Vercel deployment URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Gemini AI API Key (Required for prescription verification)
GEMINI_API_KEY=your-gemini-api-key-here
