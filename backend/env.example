# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Render will provide this)
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Secret (Generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail with App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-16-character-app-password

# Frontend URL (Update this with your Vercel deployment URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# Google Maps API Key (Optional - for geocoding fallback)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-if-needed

